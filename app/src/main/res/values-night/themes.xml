<resources>
    <!-- Dark mode theme overrides -->
    
    <!-- Override specific theme attributes for dark mode -->
    <style name="AppTheme" parent="Theme.Material3Expressive.DynamicColors.DayNight.NoActionBar">
        <!-- Override status bar and navigation bar colors for dark mode -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Ensure proper text colors for dark mode -->
        <item name="android:textColorPrimary">@color/md_theme_onSurface</item>
        <item name="android:textColorSecondary">@color/md_theme_onSurfaceVariant</item>
        <item name="android:textColorTertiary">@color/md_theme_onSurfaceVariant</item>
        
        <!-- Override ripple colors for dark mode -->
        <item name="colorControlHighlight">@color/md_theme_primaryContainer</item>
        
        <!-- Ensure proper background colors -->
        <item name="android:colorBackground">@color/md_theme_background</item>
        <item name="colorSurface">@color/md_theme_surface</item>
        <item name="colorSurfaceVariant">@color/md_theme_surfaceVariant</item>
        
        <!-- Override dialog and popup colors for dark mode -->
        <item name="colorOnSurface">@color/md_theme_onSurface</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_onSurfaceVariant</item>
        
        <!-- Ensure proper outline colors for dark mode -->
        <item name="colorOutline">@color/md_theme_outline</item>
        <item name="colorOutlineVariant">@color/md_theme_outlineVariant</item>
    </style>
    
    <!-- Dark mode specific styles -->
    <style name="AppTheme.DarkMode" parent="AppTheme">
        <!-- Additional dark mode specific overrides -->
        <item name="android:windowBackground">@color/md_theme_background</item>
        <item name="android:colorBackground">@color/md_theme_background</item>
    </style>
    
    <!-- Dark mode dialog styles -->
    <style name="MaterialAlertDialog.Rounded.Dark" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/DialogTitleTextAppearance.Dark</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DialogBodyTextAppearance.Dark</item>
        <item name="android:colorBackground">@color/md_theme_surface</item>
        <item name="colorOnSurface">@color/md_theme_onSurface</item>
    </style>
    
    <style name="DialogTitleTextAppearance.Dark" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/md_theme_onSurface</item>
    </style>
    
    <style name="DialogBodyTextAppearance.Dark" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/md_theme_onSurfaceVariant</item>
    </style>
    
    <!-- Dark mode bottom sheet styles -->
    <style name="PostCommentsBottomSheetDialogStyle.Dark" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/md_theme_surface</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="colorOnSurface">@color/md_theme_onSurface</item>
    </style>
    
    <!-- Dark mode tab layout styles -->
    <style name="HomeCustomTabLayout.Dark" parent="TextAppearance.Material3.TitleMedium">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/md_theme_onSurface</item>
    </style>
    
    <!-- Dark mode tooltip styles -->
    <style name="CustomSliderTooltip.Dark" parent="Widget.Material3.Tooltip">
        <item name="shapeAppearanceOverlay">@style/TooltipShape</item>
        <item name="android:background">@color/md_theme_surfaceContainer</item>
        <item name="android:textColor">@color/md_theme_onSurface</item>
    </style>
</resources>